#!/usr/bin/php
<?php

define('RIOTQUEST_ENV', 'CLI');

require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;

use RiotQuest\Components\Console\Make\DocsCommand;
use RiotQuest\Components\Console\Make\TemplatesCommand;
use RiotQuest\Components\Console\Make\StaticCommand;

use RiotQuest\Components\Console\Cache\ClearCommand;

$app = new Application();

// Make commands
$app->add(new DocsCommand());
$app->add(new TemplatesCommand());
$app->add(new StaticCommand());

// API commands
$app->add(new \RiotQuest\Components\Console\Summoner\NameCommand());
$app->add(new \RiotQuest\Components\Console\Summoner\IdCommand());
$app->add(new \RiotQuest\Components\Console\Summoner\UniqueCommand());
$app->add(new \RiotQuest\Components\Console\Summoner\AccountCommand());

$app->add(new \RiotQuest\Components\Console\Mastery\AllCommand());
$app->add(new \RiotQuest\Components\Console\Mastery\IdCommand());
$app->add(new \RiotQuest\Components\Console\Mastery\ScoreCommand());

$app->add(new \RiotQuest\Components\Console\Champion\RotationCommand());

$app->add(new \RiotQuest\Components\Console\League\IdCommand());
$app->add(new \RiotQuest\Components\Console\League\ChallengerCommand());
$app->add(new \RiotQuest\Components\Console\League\GrandmasterCommand());
$app->add(new \RiotQuest\Components\Console\League\GrandmasterCommand());
$app->add(new \RiotQuest\Components\Console\League\PositionsCommand());

$app->add(new \RiotQuest\Components\Console\Status\ShardCommand());

$app->add(new \RiotQuest\Components\Console\Spectator\ActiveCommand());
$app->add(new \RiotQuest\Components\Console\Spectator\FeaturedCommand());

$app->add(new \RiotQuest\Components\Console\Match\IdCommand());
$app->add(new \RiotQuest\Components\Console\Match\ListCommand());
$app->add(new \RiotQuest\Components\Console\Match\TimelineCommand());

$app->add(new \RiotQuest\Components\Console\Code\IdCommand());

// CacheModel Flushes
$app->add(new ClearCommand());

$app->run();
